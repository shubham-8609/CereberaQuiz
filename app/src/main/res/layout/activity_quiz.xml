<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".QuizActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/quiz_toolbar"
        android:layout_width="match_parent"
        app:titleTextColor="@color/primaryColor"
        app:subtitleTextColor="@color/secondaryColor"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/question_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/question_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q.1"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/_18ssp"
                    style="@style/default_heading"/>


                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/_18ssp"
                    style="@style/default_heading"
                    android:text="@string/default_question"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/option_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/secondaryColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_7sdp"

                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            app:cardElevation="@dimen/_12sdp"
                            app:cardBackgroundColor="@color/white"

                            app:cardCornerRadius="@dimen/_22sdp">
                            <TextView
                                android:id="@+id/option_A_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="A"
                                android:textColor="@color/primaryColor"
                                android:textSize="@dimen/_30ssp"
                                style="@style/default_heading"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/optin_A_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/default_options"
                            android:gravity="center"
                            style="@style/default_heading"
                            android:textColor="@color/onPrimaryColor"
                            android:textSize="@dimen/_20ssp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/option_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/secondaryColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_7sdp"

                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/white"

                            android:layout_marginStart="@dimen/_5sdp"
                            app:cardElevation="@dimen/_12sdp"

                            app:cardCornerRadius="@dimen/_22sdp">
                            <TextView
                                android:id="@+id/option_B_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="B"
                                android:textColor="@color/primaryColor"
                                android:textSize="@dimen/_30ssp"
                                style="@style/default_heading"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/optin_B_text"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/default_options"
                            android:gravity="center"
                            style="@style/default_heading"
                            android:textColor="@color/onPrimaryColor"
                            android:textSize="@dimen/_20ssp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/option_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/secondaryColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_7sdp"

                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/white"

                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            app:cardElevation="@dimen/_12sdp"

                            app:cardCornerRadius="@dimen/_22sdp">
                            <TextView
                                android:id="@+id/option_C_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="C"
                                android:textColor="@color/primaryColor"
                                android:textSize="@dimen/_30ssp"
                                style="@style/default_heading"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/optin_C_text"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/default_options"
                            android:gravity="center"
                            style="@style/default_heading"
                            android:textColor="@color/onPrimaryColor"
                            android:textSize="@dimen/_20ssp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/option_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/secondaryColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_7sdp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            app:cardBackgroundColor="@color/white"

                            android:layout_marginStart="@dimen/_5sdp"
                            app:cardElevation="@dimen/_12sdp"

                            app:cardCornerRadius="@dimen/_22sdp">
                            <TextView
                                android:id="@+id/option_D_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="D"
                                android:textColor="@color/primaryColor"
                                android:textSize="@dimen/_30ssp"
                                style="@style/default_heading"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/optin_D_text"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/default_options"
                            android:gravity="center"
                            style="@style/default_heading"
                            android:textColor="@color/onPrimaryColor"
                            android:textSize="@dimen/_20ssp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:backgroundTint="@color/primaryColor"
                android:background="@drawable/custom_btn_bg"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Next"
                android:textColor="@color/onPrimaryColor"
                android:textSize="@dimen/_20ssp"
                android:visibility="gone"
                style="@style/default_heading"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>